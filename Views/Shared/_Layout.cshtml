<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Система обмена данными</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExchangeSystem.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Fallback CDN links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="navbar-brand">
                    <i class="fas fa-exchange-alt me-2"></i>Система обмена данными
                </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="mainNavigation" style="display: flex;">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="EducationDepartments">
                                <i class="fas fa-building me-1"></i>УО и организации
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="DataImport">
                                <i class="fas fa-upload me-1"></i>Импорт данных
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="DataMapping">
                                <i class="fas fa-exchange-alt me-1"></i>Сопоставление данных
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav" id="userNavigation" style="display: flex;">
                        <li class="nav-item">
                            <span class="navbar-text me-3" id="userInfo">
                                <i class="fas fa-user me-1"></i><span id="username">Гость</span>
                            </span>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-outline-light btn-sm" onclick="logout()">
                                <i class="fas fa-sign-out-alt me-1"></i>Выйти
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Система обмена данными - <a asp-area="" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/api.js" asp-append-version="true"></script>
    <!-- Fallback CDN scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Проверка авторизации и управление навигацией
        document.addEventListener('DOMContentLoaded', function() {
            // ВРЕМЕННО ОТКЛЮЧЕНО: checkAuthStatus();
            
            // Просто показываем навигацию
            const token = localStorage.getItem('authToken');
            const username = localStorage.getItem('username');
            
            if (token) {
                showNavigation();
                if (username) {
                    const usernameEl = document.getElementById('username');
                    if (usernameEl) {
                        usernameEl.textContent = username;
                    }
                }
            }
        });
        
        function checkAuthStatus() {
            // ВРЕМЕННО ОТКЛЮЧЕНО - функция не делает ничего
            console.log('checkAuthStatus called but disabled');
        }
        
        function showNavigation() {
            const mainNav = document.getElementById('mainNavigation');
            const userNav = document.getElementById('userNavigation');
            if (mainNav) mainNav.style.display = 'flex';
            if (userNav) userNav.style.display = 'flex';
        }
        
        function hideNavigation() {
            const mainNav = document.getElementById('mainNavigation');
            const userNav = document.getElementById('userNavigation');
            if (mainNav) mainNav.style.display = 'none';
            if (userNav) userNav.style.display = 'none';
        }
        
        async function logout() {
            try {
                // Вызываем API logout
                await fetch('/api/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
            } catch (error) {
                console.error('Logout API error:', error);
            }
            
            // Очищаем локальное хранилище
            localStorage.removeItem('authToken');
            localStorage.removeItem('username');
            
            // Перенаправляем на страницу входа
            window.location.href = '/Auth/Login';
        }
    </script>
</body>
</html>
