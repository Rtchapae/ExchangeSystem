@{
    ViewData["Title"] = "Продукты";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-box me-2"></i>Управление продуктами</h2>
        <hr>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Поиск продуктов...">
            <button class="btn btn-outline-secondary" type="button" onclick="searchProducts()">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-primary" onclick="showAddProductModal()">
            <i class="fas fa-plus me-2"></i>Добавить продукт
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="productsTable">
                        <thead>
                            <tr>
                                <th data-sortable>ID</th>
                                <th data-sortable>Название</th>
                                <th data-sortable>Категория</th>
                                <th data-sortable>Код</th>
                                <th data-sortable>Единица</th>
                                <th data-sortable>Цена</th>
                                <th data-sortable>Статус</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="8" class="text-center">Загрузка...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="pagination" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalTitle">Добавить продукт</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="productForm">
                    <input type="hidden" id="productId">
                    <div class="mb-3">
                        <label for="productName" class="form-label">Название *</label>
                        <input type="text" class="form-control" id="productName" required>
                    </div>
                    <div class="mb-3">
                        <label for="productCategory" class="form-label">Категория</label>
                        <select class="form-control" id="productCategory">
                            <option value="">Выберите категорию</option>
                            <option value="Продукты питания">Продукты питания</option>
                            <option value="Напитки">Напитки</option>
                            <option value="Хлебобулочные изделия">Хлебобулочные изделия</option>
                            <option value="Молочные продукты">Молочные продукты</option>
                            <option value="Мясо и птица">Мясо и птица</option>
                            <option value="Овощи и фрукты">Овощи и фрукты</option>
                            <option value="Кондитерские изделия">Кондитерские изделия</option>
                            <option value="Замороженные продукты">Замороженные продукты</option>
                            <option value="Бакалея">Бакалея</option>
                            <option value="Другое">Другое</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="productCode" class="form-label">Код</label>
                        <input type="text" class="form-control" id="productCode">
                    </div>
                    <div class="mb-3">
                        <label for="productDescription" class="form-label">Описание</label>
                        <textarea class="form-control" id="productDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="productUnit" class="form-label">Единица измерения</label>
                        <input type="text" class="form-control" id="productUnit">
                    </div>
                    <div class="mb-3">
                        <label for="productPrice" class="form-label">Цена</label>
                        <input type="number" class="form-control" id="productPrice" step="0.01" min="0">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="saveProduct()">Сохранить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentPage = 1;
        let pageSize = 20;
        let totalPages = 1;

        $(document).ready(function() {
            loadProducts();
            addTableSorting(document.getElementById('productsTable'));
        });

        async function loadProducts(page = 1) {
            try {
                currentPage = page;
                const searchTerm = document.getElementById('searchInput').value;
                const url = searchTerm 
                    ? `/data/products?search=${encodeURIComponent(searchTerm)}`
                    : '/data/products';
                
                const response = await api.get(url);
                
                if (response.success) {
                    displayProducts(response.data);
                } else {
                    showAlert('Ошибка при загрузке продуктов', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при загрузке продуктов:', error);
                showAlert('Ошибка при загрузке продуктов', 'danger');
            }
        }

        function displayProducts(products) {
            const tbody = document.querySelector('#productsTable tbody');
            tbody.innerHTML = '';

            if (products.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center">Продукты не найдены</td></tr>';
                return;
            }

            products.forEach(product => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${product.id}</td>
                    <td>${product.name}</td>
                    <td>${product.category || '-'}</td>
                    <td>${product.code || '-'}</td>
                    <td>${product.unit || '-'}</td>
                    <td>${product.price ? formatCurrency(product.price) : '-'}</td>
                    <td>
                        <span class="badge ${product.isActive ? 'bg-success' : 'bg-danger'}">
                            ${product.isActive ? 'Активен' : 'Неактивен'}
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" onclick="editProduct(${product.id})" title="Редактировать">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteProduct(${product.id})" title="Удалить">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function searchProducts() {
            loadProducts(1);
        }

        function showAddProductModal() {
            document.getElementById('productModalTitle').textContent = 'Добавить продукт';
            document.getElementById('productForm').reset();
            document.getElementById('productId').value = '';
            new bootstrap.Modal(document.getElementById('productModal')).show();
        }

        async function editProduct(id) {
            try {
                const response = await api.get(`/data/products/${id}`);
                if (response.success) {
                    const product = response.data;
                    document.getElementById('productModalTitle').textContent = 'Редактировать продукт';
                    document.getElementById('productId').value = product.id;
                    document.getElementById('productName').value = product.name;
                    document.getElementById('productCategory').value = product.category || '';
                    document.getElementById('productCode').value = product.code || '';
                    document.getElementById('productDescription').value = product.description || '';
                    document.getElementById('productUnit').value = product.unit || '';
                    document.getElementById('productPrice').value = product.price || '';
                    new bootstrap.Modal(document.getElementById('productModal')).show();
                } else {
                    showAlert('Ошибка при загрузке продукта', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при загрузке продукта:', error);
                showAlert('Ошибка при загрузке продукта', 'danger');
            }
        }

        async function saveProduct() {
            try {
                const productData = {
                    id: document.getElementById('productId').value || 0,
                    name: document.getElementById('productName').value,
                    category: document.getElementById('productCategory').value,
                    code: document.getElementById('productCode').value,
                    description: document.getElementById('productDescription').value,
                    unit: document.getElementById('productUnit').value,
                    price: parseFloat(document.getElementById('productPrice').value) || null
                };

                const isEdit = productData.id > 0;
                const response = isEdit 
                    ? await api.put(`/data/products/${productData.id}`, productData)
                    : await api.post('/data/products', productData);

                if (response.success) {
                    bootstrap.Modal.getInstance(document.getElementById('productModal')).hide();
                    showAlert(isEdit ? 'Продукт обновлен' : 'Продукт добавлен', 'success');
                    loadProducts(currentPage);
                } else {
                    showAlert(response.message || 'Ошибка при сохранении продукта', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при сохранении продукта:', error);
                showAlert('Ошибка при сохранении продукта', 'danger');
            }
        }

        async function deleteProduct(id) {
            if (confirm('Вы уверены, что хотите удалить этот продукт?')) {
                try {
                    const response = await api.delete(`/data/products/${id}`);
                    if (response.success) {
                        showAlert('Продукт удален', 'success');
                        loadProducts(currentPage);
                    } else {
                        showAlert(response.message || 'Ошибка при удалении продукта', 'danger');
                    }
                } catch (error) {
                    console.error('Ошибка при удалении продукта:', error);
                    showAlert('Ошибка при удалении продукта', 'danger');
                }
            }
        }

        // Search on Enter key
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchProducts();
            }
        });
    </script>
}
