@{
    ViewData["Title"] = "Импорт данных";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-upload me-2"></i>Импорт данных</h2>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-file-csv me-2"></i>Импорт CSV файлов
                </h5>
            </div>
            <div class="card-body">
                <form id="csvImportForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="csvFile" class="form-label">Выберите CSV файл</label>
                        <input type="file" class="form-control" id="csvFile" accept=".csv" required>
                        <div class="form-text">Поддерживаются файлы с разделителем ";" и кодировкой Windows-1251</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload me-2"></i>Импортировать CSV
                        </button>
                    </div>
                </form>
                <div id="csvResult" class="mt-3"></div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-database me-2"></i>Импорт DBF файлов
                </h5>
            </div>
            <div class="card-body">
                <form id="dbfImportForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="dbfFile" class="form-label">Выберите DBF файл</label>
                        <input type="file" class="form-control" id="dbfFile" accept=".dbf" required>
                        <div class="form-text">Поддерживаются файлы в формате dBASE IV</div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload me-2"></i>Импортировать DBF
                        </button>
                    </div>
                </form>
                <div id="dbfResult" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Информация о форматах файлов
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>CSV файлы продуктов:</h6>
                        <ul>
                            <li>название продукта</li>
                            <li>категория</li>
                            <li>код продукта</li>
                            <li>описание</li>
                            <li>единица</li>
                            <li>цена</li>
                        </ul>
                        
                        <h6>CSV файлы магазинов:</h6>
                        <ul>
                            <li>название магазина</li>
                            <li>адрес</li>
                            <li>город</li>
                            <li>телефон</li>
                            <li>менеджер</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>CSV файлы транзакций:</h6>
                        <ul>
                            <li>дата транзакции</li>
                            <li>название продукта</li>
                            <li>название магазина</li>
                            <li>номер документа</li>
                            <li>количество</li>
                            <li>цена</li>
                            <li>поставщик</li>
                            <li>срок годности</li>
                            <li>примечания</li>
                        </ul>
                        
                        <h6>DBF файлы:</h6>
                        <p>Система автоматически определяет тип данных по содержимому файла и именам полей.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>История импорта
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="importHistoryTable">
                        <thead>
                            <tr>
                                <th>Дата</th>
                                <th>Тип файла</th>
                                <th>Имя файла</th>
                                <th>Статус</th>
                                <th>Обработано</th>
                                <th>Импортировано</th>
                                <th>Пропущено</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" class="text-center">История импорта будет отображаться здесь</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // CSV Import
            $('#csvImportForm').on('submit', async function(e) {
                e.preventDefault();
                
                const fileInput = document.getElementById('csvFile');
                const file = fileInput.files[0];
                
                if (!file) {
                    showAlert('Пожалуйста, выберите файл', 'warning');
                    return;
                }
                
                try {
                    showLoading();
                    const response = await api.uploadFile('/api/import/csv', file);
                    
                    if (response.success) {
                        showImportResult('csvResult', response, 'success');
                        showAlert('CSV файл успешно импортирован', 'success');
                        fileInput.value = '';
                    } else {
                        showImportResult('csvResult', response, 'danger');
                        showAlert('Ошибка при импорте CSV файла', 'danger');
                    }
                } catch (error) {
                    showImportResult('csvResult', { message: error.message }, 'danger');
                    showAlert('Ошибка при импорте CSV файла', 'danger');
                } finally {
                    hideLoading();
                }
            });
            
            // DBF Import
            $('#dbfImportForm').on('submit', async function(e) {
                e.preventDefault();
                
                const fileInput = document.getElementById('dbfFile');
                const file = fileInput.files[0];
                
                if (!file) {
                    showAlert('Пожалуйста, выберите файл', 'warning');
                    return;
                }
                
                try {
                    showLoading();
                    const response = await api.uploadFile('/api/import/dbf', file);
                    
                    if (response.success) {
                        showImportResult('dbfResult', response, 'success');
                        showAlert('DBF файл успешно импортирован', 'success');
                        fileInput.value = '';
                    } else {
                        showImportResult('dbfResult', response, 'danger');
                        showAlert('Ошибка при импорте DBF файла', 'danger');
                    }
                } catch (error) {
                    showImportResult('dbfResult', { message: error.message }, 'danger');
                    showAlert('Ошибка при импорте DBF файла', 'danger');
                } finally {
                    hideLoading();
                }
            });
        });
        
        function showImportResult(containerId, result, type) {
            const container = document.getElementById(containerId);
            const alertClass = `alert-${type}`;
            
            let html = `<div class="alert ${alertClass}">`;
            html += `<h6>${result.message}</h6>`;
            
            if (result.recordsProcessed !== undefined) {
                html += `<p><strong>Обработано записей:</strong> ${result.recordsProcessed}</p>`;
            }
            
            if (result.recordsImported !== undefined) {
                html += `<p><strong>Импортировано:</strong> ${result.recordsImported}</p>`;
            }
            
            if (result.recordsSkipped !== undefined) {
                html += `<p><strong>Пропущено:</strong> ${result.recordsSkipped}</p>`;
            }
            
            if (result.errors && result.errors.length > 0) {
                html += `<h6>Ошибки:</h6><ul>`;
                result.errors.forEach(error => {
                    html += `<li>${error}</li>`;
                });
                html += `</ul>`;
            }
            
            if (result.warnings && result.warnings.length > 0) {
                html += `<h6>Предупреждения:</h6><ul>`;
                result.warnings.forEach(warning => {
                    html += `<li>${warning}</li>`;
                });
                html += `</ul>`;
            }
            
            html += `</div>`;
            
            container.innerHTML = html;
        }
    </script>
}



