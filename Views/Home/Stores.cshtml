@{
    ViewData["Title"] = "Организации";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-building me-2"></i>Управление организациями</h2>
        <hr>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Поиск организаций...">
            <button class="btn btn-outline-secondary" type="button" onclick="searchStores()">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-primary" onclick="showAddStoreModal()">
            <i class="fas fa-plus me-2"></i>Добавить организацию
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="storesTable">
                        <thead>
                            <tr>
                                <th data-sortable>ID</th>
                                <th data-sortable>Название</th>
                                <th data-sortable>Адрес</th>
                                <th data-sortable>Город</th>
                                <th data-sortable>Телефон</th>
                                <th data-sortable>Менеджер</th>
                                <th data-sortable>Статус</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="8" class="text-center">Загрузка...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Store Modal -->
<div class="modal fade" id="storeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="storeModalTitle">Добавить организацию</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="storeForm">
                    <input type="hidden" id="storeId">
                    <div class="mb-3">
                        <label for="storeName" class="form-label">Название *</label>
                        <input type="text" class="form-control" id="storeName" required>
                    </div>
                    <div class="mb-3">
                        <label for="storeAddress" class="form-label">Адрес</label>
                        <input type="text" class="form-control" id="storeAddress">
                    </div>
                    <div class="mb-3">
                        <label for="storeCity" class="form-label">Город</label>
                        <input type="text" class="form-control" id="storeCity">
                    </div>
                    <div class="mb-3">
                        <label for="storePhone" class="form-label">Телефон</label>
                        <input type="text" class="form-control" id="storePhone">
                    </div>
                    <div class="mb-3">
                        <label for="storeManager" class="form-label">Менеджер</label>
                        <input type="text" class="form-control" id="storeManager">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="saveStore()">Сохранить</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadStores();
            addTableSorting(document.getElementById('storesTable'));
        });

        async function loadStores() {
            try {
                const searchTerm = document.getElementById('searchInput').value;
                const url = searchTerm 
                    ? `/data/stores?search=${encodeURIComponent(searchTerm)}`
                    : '/data/stores';
                
                const response = await api.get(url);
                
                if (response.success) {
                    displayStores(response.data);
                } else {
                    showAlert('Ошибка при загрузке магазинов', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при загрузке магазинов:', error);
                showAlert('Ошибка при загрузке магазинов', 'danger');
            }
        }

        function displayStores(stores) {
            const tbody = document.querySelector('#storesTable tbody');
            tbody.innerHTML = '';

            if (stores.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center">Организации не найдены</td></tr>';
                return;
            }

            stores.forEach(store => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${store.id}</td>
                    <td>${store.name}</td>
                    <td>${store.address || '-'}</td>
                    <td>${store.city || '-'}</td>
                    <td>${store.phone || '-'}</td>
                    <td>${store.manager || '-'}</td>
                    <td>
                        <span class="badge ${store.isActive ? 'bg-success' : 'bg-danger'}">
                            ${store.isActive ? 'Активен' : 'Неактивен'}
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" onclick="editStore(${store.id})" title="Редактировать">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteStore(${store.id})" title="Удалить">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        function searchStores() {
            loadStores();
        }

        function showAddStoreModal() {
            document.getElementById('storeModalTitle').textContent = 'Добавить организацию';
            document.getElementById('storeForm').reset();
            document.getElementById('storeId').value = '';
            new bootstrap.Modal(document.getElementById('storeModal')).show();
        }

        async function editStore(id) {
            try {
                const response = await api.get(`/data/stores/${id}`);
                if (response.success) {
                    const store = response.data;
                    document.getElementById('storeModalTitle').textContent = 'Редактировать организацию';
                    document.getElementById('storeId').value = store.id;
                    document.getElementById('storeName').value = store.name;
                    document.getElementById('storeAddress').value = store.address || '';
                    document.getElementById('storeCity').value = store.city || '';
                    document.getElementById('storePhone').value = store.phone || '';
                    document.getElementById('storeManager').value = store.manager || '';
                    new bootstrap.Modal(document.getElementById('storeModal')).show();
                } else {
                    showAlert('Ошибка при загрузке магазина', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при загрузке магазина:', error);
                showAlert('Ошибка при загрузке магазина', 'danger');
            }
        }

        async function saveStore() {
            try {
                const storeData = {
                    id: document.getElementById('storeId').value || 0,
                    name: document.getElementById('storeName').value,
                    address: document.getElementById('storeAddress').value,
                    city: document.getElementById('storeCity').value,
                    phone: document.getElementById('storePhone').value,
                    manager: document.getElementById('storeManager').value
                };

                const isEdit = storeData.id > 0;
                const response = isEdit 
                    ? await api.put(`/data/stores/${storeData.id}`, storeData)
                    : await api.post('/data/stores', storeData);

                if (response.success) {
                    bootstrap.Modal.getInstance(document.getElementById('storeModal')).hide();
                    showAlert(isEdit ? 'Организация обновлена' : 'Организация добавлена', 'success');
                    loadStores();
                } else {
                    showAlert(response.message || 'Ошибка при сохранении магазина', 'danger');
                }
            } catch (error) {
                console.error('Ошибка при сохранении магазина:', error);
                showAlert('Ошибка при сохранении магазина', 'danger');
            }
        }

        async function deleteStore(id) {
            if (confirm('Вы уверены, что хотите удалить эту организацию?')) {
                try {
                    const response = await api.delete(`/data/stores/${id}`);
                    if (response.success) {
                        showAlert('Организация удалена', 'success');
                        loadStores();
                    } else {
                        showAlert(response.message || 'Ошибка при удалении магазина', 'danger');
                    }
                } catch (error) {
                    console.error('Ошибка при удалении магазина:', error);
                    showAlert('Ошибка при удалении магазина', 'danger');
                }
            }
        }

        // Search on Enter key
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchStores();
            }
        });
    </script>
}
